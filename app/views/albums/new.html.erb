<%= form_for @album, url: albums_path, html: {role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>
  <div class="form-group">
    <%= f.label :description  %>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Description', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :release_date  %>
    <%= f.text_field :release_date, class: 'form-control', placeholder: 'YYYY-mm-dd' %>
  </div>
  <div class="form-group">
    <%= f.label :artist  %>
    <%= collection_select(:album, :artist_id, Artist.all, :id, :name, {}, {class: 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
