<div class="row">
  <% for a in @albums %>
    <div class="col-md-3">
      <div class="thumbnail album">
        <%= link_to a do %>
        <%= image_tag "/uploads/#{a.cover_image}" %>
        <% end  %>
        <h4 class="album-title">
          <%= link_to a.title.titleize, a %>
        </h4>
        <h5 class="album-artist"><%= a.artist.name %></h5>
        <p class="album-release-date"><%= a.release_date %></p>
      </div>
    </div>
  <% end %>
</div>
